{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "types": [
            "node"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        /* Web */
        "jsx": "react-jsx",
        "rootDir": ".",
        "paths": {
            "@app/*": [
                "./src/*"
            ],
            "@css/*": [
                "./src/assets/css/*"
            ],
            "@img/*": [
                "./src/assets/img/*"
            ],
        }
    },
    "include": [
        "src",
        "vite.config.ts"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}